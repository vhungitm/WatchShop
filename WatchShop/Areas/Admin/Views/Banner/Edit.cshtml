@model Model.EF.Banner

@{
    ViewBag.Title = "Cập nhật thông tin bìa quảng cáo";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    Bìa Quảng Cáo
}

@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();

            var finder = new CKFinder();

            finder.selectActionFunction = function (url) {
                $('#Image').val(url);
                $('#image').prop('src', url);
            };

            finder.popup();
        })
    </script>
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Cập Nhật</h6>
    </div>
    <div class="card-body pb-0">
        @using (Html.BeginForm("Edit", "Banner", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Tiêu đề</label>
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="form-group">
                <label>Ảnh</label>
                <div class="text-center">
                    <div class="mb-4">
                        <img src="@(Model != null ? Model.Image : "/Images/no-banner-cover.png")" width="300" height="180" alt="banner" class="rounded border" id="image" />
                        @Html.HiddenFor(model => model.Image)
                    </div>
                    <div>
                        <button type="button" class="btn btn-icon-split btn-primary" id="btnSelectImage">
                            <span class="icon text-white-50 fw-bold">
                                <i class="fas fa-image fa-fw"></i>
                            </span>
                            <span class="text">Chọn ảnh</span>
                        </button>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Image)
            </div>
            <div class="form-group">
                <label>Đường dẫn</label>
                @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Link)
            </div>
            <div class="form-group">
                <label>Thứ tự hiển thị</label>
                @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.DisplayOrder)
            </div>
            <div class="form-group">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input" })
                    <label class="form-check-label" for="Status">
                        Kích hoạt
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-icon-split btn-primary">
                    <span class="icon text-white-50 fw-bold">
                        <i class="fas fa-floppy-disk fa-fw"></i>
                    </span>
                    <span class="text">Lưu dữ liệu</span>
                </button>
            </div>
        }
    </div>
</div>
