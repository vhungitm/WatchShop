@model Model.EF.Contact

@{
    ViewBag.Title = "Cập nhật thông tin liên hệ";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    Thông Tin Liên Hệ
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Cập Nhật</h6>
    </div>
    <div class="card-body pb-0">
        @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Name)

            <div class="form-group">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control rounded-0", @rows = "15" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
            <div class="form-group">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input" })
                    <label class="form-check-label" for="ckbStatus">
                        Kích hoạt
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-icon-split btn-primary">
                    <span class="icon text-white-50 fw-bold">
                        <i class="fas fa-floppy-disk fa-fw"></i>
                    </span>
                    <span class="text">Lưu dữ liệu</span>
                </button>
            </div>
        }
    </div>
</div>