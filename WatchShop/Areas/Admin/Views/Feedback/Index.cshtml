@model PagedList.IPagedList<Model.EF.Feedback>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh Sách Phản Hồi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Phản hồi
}
@section jsFooter{
    <script src="~/JS/Admin/feedbackController.js"></script>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">
            Danh Sách
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive p-2">
            @using (Html.BeginForm("Index", "Feedback", FormMethod.Get))
            {
                <div class="input-group mb-3">
                    <select class="form-control" placeholder="Id" name="searchString" value="@ViewBag.SearchString">
                        <option>Đã xem</option>
                        <option>Chưa xem</option>
                        <option>Tất cả</option>
                    </select>
                    <button class="btn btn-icon-split btn-primary" type="submit">
                        <span class="icon text-white-50">
                            <i class="fas fa-search fa-sm"></i>
                        </span>
                        <span class="text">Tìm kiếm</span>
                    </button>
                </div>
            }

            @if (Model.Count > 0)
            {
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr align="center">
                            <th>ID</th>
                            <th>Người gửi</th>
                            <th>Thời gian gửi</th>
                            <th>Trạng thái</th>
                            <th>Công cụ</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="form-check form-switch ckb-status" data-id="@item.ID">
                                        <input @(item.Status ? "checked" : null) class="form-check-input" type="checkbox" role="switch" id="ckbStatus-@item.ID">
                                        <label class="form-check-label" for="ckbStatus-@item.ID">@(item.Status == true ? "Đã xem" : "Chưa xem")</label>
                                    </div>
                                </td>
                                <td align="center">
                                    <a href="/Admin/Feedback/View/@item.ID" class="btn btn-primary btn-circle btn-sm" title="Xem">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                if (Model.PageCount > 1)
                {
                    <div class="mb-2 text-center">Trang @Model.PageNumber / @Model.PageCount</div>

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }), new PagedListRenderOptions
                    {
                       MaximumPageNumbersToDisplay = 5,
                       ContainerDivClasses = new string[] { "pagination-container d-flex justify-content-center" },
                       UlElementClasses = new string[] { "pagination mb-0" },
                       DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                       DisplayLinkToNextPage = PagedListDisplayMode.Always,
                       LinkToPreviousPageFormat = "Trước",
                       LinkToNextPageFormat = "Sau",
                       LinkToFirstPageFormat = "Đầu",
                       LinkToLastPageFormat = "Cuối"
                    })
                }
            }
            else
            {
                <div class="alert alert-danger mb-0">Không có dữ liệu</div>
            }
        </div>
    </div>
</div>