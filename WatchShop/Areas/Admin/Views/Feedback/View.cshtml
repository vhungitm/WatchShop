@model Model.EF.Feedback
@{
    ViewBag.Title = "Chi tiết phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Phản hồi
}
@section jsFooter{
    <script src="~/JS/Admin/feedbackController.js"></script>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Chi Tiết Phản Hồi</h6>
    </div>
    <div class="card-body pb-0">
        <div class="table-responsive px-2">
            <p>Họ tên: @Model.Name</p>
            <p>Số điện thoại: @Model.Phone</p>
            <p>Địa chỉ: @Model.Address</p>
            <p>Email: @Model.Email</p>
            <p>Nội dung phản hồi:</p>
            <p class="alert alert-primary">@Html.Raw(Model.Content)</p>
            <p>
                <div class="form-check form-switch ckb-status" data-id="@Model.ID">
                    <input @(Model.Status ? "checked" : null) class="form-check-input" type="checkbox" role="switch" id="ckbStatus-@Model.ID">
                    <label class="form-check-label" for="ckbStatus-@Model.ID">@(Model.Status == true ? "Đã xem" : "Chưa xem")</label>
                </div>
            </p>
        </div>
    </div>
</div>
