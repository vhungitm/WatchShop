<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Bộ lọc</h6>
    </div>
    <div class="card-body p-4">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div>
                <div class="row g-4">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <div class="input-group-text bg-white">Lọc theo</div>
                            <select class="form-control" name="FilterType" id="FilterType">
                                @if (FilterType == "Tháng")
                                {
                                    <option selected>Tháng</option>
                                    <option>Năm</option>
                                }
                                else
                                {
                                    <option>Tháng</option>
                                    <option selected="selected">Năm</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <div class="input-group-text bg-white">Thời gian</div>
                            <select id="Thang" name="Thang" class="form-control" @hide>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    if (Thang == i)
                                    {
                                        <option selected value="@i">Tháng @i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">Tháng @i</option>
                                    }
                                }
                            </select>
                            <select id="Nam" name="Nam" class="form-control">
                                @for (int i = 2017; i <= DateTime.Now.Year; i++)
                                {
                                    if (Nam == i)
                                    {
                                        <option selected value="@i">Năm @i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">Năm @i</option>
                                    }
                                }
                            </select>

                            <button class="btn btn-icon-split btn-primary" type="submit">
                                <span class="icon text-white-50">
                                    <i class="fas fa-filter"></i>
                                </span>
                                <span class="text">Lọc</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <script>
            $("#FilterType").change(function () {
                if ($(this).find(":selected").text() == "Tháng") {
                    $("#Thang").show();
                }
                else {
                    $("#Thang").hide();
                }
            })
        </script>
    </div>
</div>

