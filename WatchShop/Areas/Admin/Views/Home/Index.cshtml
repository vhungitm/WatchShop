<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Sản Phẩm</h6>
    </div>
    <!-- Card Body -->
    <div class="card-body">
        <div class="table-responsive p-2">
            <!-- Top sản phẩm bán chạy -->
            @if (listTopProductByQuantity.Count() > 0)
            {
                var i = 1;
                var j = 1;
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr><th colspan="4"><center>TOP SẢN PHẨM BÁN CHẠY</center></th></tr>
                    </thead>

                    <thead>
                        <tr align="center">
                            <th>Top</th>
                            <th>Tên sản phẩm</th>
                            <th style="width: 30%">Đã bán</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in listTopProductByQuantity)
                        {
                        <tr class="align-middle">
                            <td align="center">@(i++)</td>
                            <td align="center">
                                <div class="d-flex">
                                    <img src="@item.Image" width="40" height="40" alt="@item.Name" class="me-2" />
                                    <span class="my-auto">@item.Name</span>
                                </div>
                            </td>
                            <td align="center">@item.Quantity Chiếc</td>
                        </tr>
                        }

                    </tbody>

                </table>

                <!-- Top sản phẩm theo doanh thu -->
                <table class="table table-bordered mt-5 mb-0" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr><th colspan="4"><center>TOP SẢN PHẨM CÓ DOANH THU CAO</center></th></tr>
                    </thead>
                    <thead>
                        <tr align="center">
                            <th style="text-align:center">Top</th>
                            <th>Sản phẩm</th>
                            <th style="width: 30%">Tổng doanh thu</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in listTopProductByPrice)
                        {
                            <tr class="align-middle">
                                <td align="center">@(j++)</td>
                                <td align="center">
                                    <div class="d-flex">
                                        <img src="@item.Image" width="40" height="40" alt="@item.Name" class="me-2" />
                                        <span class="my-auto">
                                            @item.Name
                                        </span>
                                    </div>
                                <td align="center">
                                    @(item.Price.ToString("N0"))đ
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger mb-0">Không có dữ liệu</div>
            }
        </div>
    </div>
</div>