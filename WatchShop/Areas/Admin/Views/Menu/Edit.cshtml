@model Model.EF.Menu

@{
    ViewBag.Title = "Cập nhật thông tin menu";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    Menu
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Cập Nhật</h6>
    </div>
    <div class="card-body pb-0">
        @using (Html.BeginForm("Edit", "Menu", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label>Tên Menu</label>
                @Html.TextBoxFor(model => model.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Text)
            </div>
            <div class="form-group">
                <label>Đường dẫn</label>
                @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Link)
            </div>
            <div class="form-group">
                <label>Thứ tự xuất hiện</label>
                @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.DisplayOrder)
            </div>
            <div class="form-group">
                <label>Target</label>
                @Html.DropDownListFor(model => model.Target, new SelectList(new[] { "_blank", "_self" }), new { @class = "form-select", })
                @Html.ValidationMessageFor(model => model.Target)
            </div>
            <div class="form-group">
                <label>Loại Menu</label>
                @Html.DropDownListFor(model => model.TypeID, null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.TypeID)
            </div>
            <div class="form-group">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input" })
                    <label class="form-check-label" for="Status">
                        Kích hoạt
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-icon-split btn-primary">
                    <span class="icon text-white-50 fw-bold">
                        <i class="fas fa-floppy-disk fa-fw"></i>
                    </span>
                    <span class="text">Lưu dữ liệu</span>
                </button>
            </div>
        }
    </div>
</div>
