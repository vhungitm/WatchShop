@model PagedList.IPagedList<Model.ViewModel.OrderViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Đơn hàng
}
@section jsFooter{
    <script src="~/JS/Admin/orderController.js"></script>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">
            Danh Sách
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive p-2">

            @using (Html.BeginForm("Index", "Order", FormMethod.Get))
            {
                <div class="input-group mb-3">
                    <select class="form-select" name="searchString" value="@ViewBag.SearchString">
                        <option>Chưa thanh toán</option>
                        <option>Đã thanh toán</option>
                        <option>Tất cả</option>
                    </select>
                    <button class="btn btn-icon-split btn-primary" type="submit">
                        <span class="icon text-white-50">
                            <i class="fas fa-search fa-sm"></i>
                        </span>
                        <span class="text">Tìm kiếm</span>
                    </button>
                </div>
            }

            @if (Model.Count > 0)
            {
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr align="center">
                            <th>ĐH</th>
                            <th>Tên KH</th>
                            <th>Tên sản phẩm</th>
                            <th>SL</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            var col = item.Products.Count() > 1 ? ("rowspan = " + item.Products.Count()) : ("");
                            <tr class="align-middle">
                                <td @col>@item.OrderID</td>
                                <td @col>@item.CustomerName</td>
                                <td>
                                    <div class="d-flex">
                                        <img src="@item.Products[0].Image" width="50" height="50" alt="@item.Products[0].Name" />
                                        <span class="my-auto ms-2">
                                            @item.Products[0].Name
                                        </span>
                                    </div>
                                </td>
                                <td>@item.Products[0].Quantity</td>
                                <td>@(item.Products[0].Price.ToString("N0"))đ</td>
                                <td @col>@(item.PriceTotal.ToString("N0"))đ</td>
                                <td @col>@(item.CreatedDate != null ? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td @col>
                                    <a href="#" class="form-check form-switch ckb-status" data-bs-toggle="modal" data-bs-target="#changeStatus-@item.OrderID">
                                        <input @(item.Status ? "checked" : null) class="form-check-input" type="checkbox" role="switch" id="ckbStatus-@item.OrderID">
                                        <label class="form-check-label" for="ckbStatus-@item.OrderID">@(item.Status == true ? "Đã thanh toán" : "Chưa thanh toán")</label>
                                    </a>
                                </td>

                                <div class="modal fade" id="changeStatus-@item.OrderID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body">Thay đổi trạng thái thanh toán của đơn hàng #@item.OrderID?</div>
                                            <div class="modal-footer p-2">
                                                <button class="btn btn-secondary btn-icon-split btn-sm" type="button" data-bs-dismiss="modal">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-times"></i>
                                                    </span>
                                                    <span class="text">Hủy</span>
                                                </button>
                                                <a class="btn btn-primary btn-icon-split btn-sm" href="/Admin/Order/ChangeStatus/@item.OrderID">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-check"></i>
                                                    </span>
                                                    <span class="text">Thay đổi</span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </tr>
                            for (int i = 1; i < item.Products.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex">
                                            <img src="@item.Products[i].Image" width="50" height="50" alt="@item.Products[i].Name" />
                                            <span class="my-auto ms-2">
                                                @item.Products[i].Name
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        @item.Products[i].Quantity
                                    </td>
                                    <td>
                                        @(item.Products[i].Price.ToString("N0"))đ
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                if (Model.PageCount > 1)
                {
                    <div class="mb-2 text-center">Trang @Model.PageNumber / @Model.PageCount</div>

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }), new PagedListRenderOptions
                    {
                       MaximumPageNumbersToDisplay = 5,
                       ContainerDivClasses = new string[] { "pagination-container d-flex justify-content-center" },
                       UlElementClasses = new string[] { "pagination mb-0" },
                       DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                       DisplayLinkToNextPage = PagedListDisplayMode.Always,
                       LinkToPreviousPageFormat = "Trước",
                       LinkToNextPageFormat = "Sau",
                       LinkToFirstPageFormat = "Đầu",
                       LinkToLastPageFormat = "Cuối"
                    })
                }
            }
            else
            {
                <div class="alert alert-danger mb-0">Không có dữ liệu</div>
            }
        </div>
    </div>
</div>
