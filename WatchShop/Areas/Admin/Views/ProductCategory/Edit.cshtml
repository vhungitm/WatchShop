@model Model.EF.ProductCategory

@{
    ViewBag.Title = "Cập nhật thông tin danh mục sản phẩm";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Danh mục sản phẩm
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Cập Nhật</h6>
    </div>
    <div class="card-body pb-0">
        @using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post, new { @class = "user" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Tên danh mục</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="form-group">
                <label>Danh mục cấp trên</label>
                @Html.DropDownListFor(model => model.ParentID, null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.ParentID)
            </div>
            <div class="form-group">
                <label>Thứ tự hiển thị</label>
                @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DisplayOrder)
            </div>
            <div class="form-group">
                <label>Meta Keyworks</label>
                @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MetaKeywords)
            </div>

            <div class="form-group">
                <label>Meta Description</label>
                @Html.TextBoxFor(model => model.MetaDescriptions, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MetaDescriptions)
            </div>

            <div class="form-group">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.ShowOnHome, new { @class = "form-check-input" })
                    <label class="form-check-label" for="ShowOnHome">
                        Hiển thị trên trang chủ
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input" })
                    <label class="form-check-label" for="Status">
                        Kích hoạt
                    </label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-icon-split btn-primary">
                    <span class="icon text-white-50 fw-bold">
                        <i class="fas fa-floppy-disk fa-fw"></i>
                    </span>
                    <span class="text">Lưu dữ liệu</span>
                </button>
            </div>
        }
    </div>
</div>
