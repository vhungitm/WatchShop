@model PagedList.IPagedList<Model.ViewModel.ProductViewModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "Tìm kiếm - " + ViewBag.keyword;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="p-5">
    <div class="card shadow">
        <div class="card-header py-3 bg-white">
            <h6 class="fw-bold m-0">Tìm Kiếm</h6>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm("Search", "Product", FormMethod.Get))
            {
                <div class="input-group mb-4">
                    <input id="keyword" name="keyword" class="form-control" placeholder="Từ khóa tìm kiếm" value="@ViewBag.Keyword" />
                    <button type="submit" class="btn btn-icon-split btn-primary">
                        <span class="icon text-white-50">
                            <i class="fas fa-search"></i>
                        </span>
                        <span class="text">
                            Tìm kiếm
                        </span>
                    </button>
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.keyword) && Model.Count > 0)
            {
                <div class="mt-3 row row-cols-1 g-4 row-cols-sm-2 row-cols-md-3 row-cols-xl-4">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <a href="/Chi-tiet/@item.MetaTitle-@item.ID" class="text-dark">
                                <div class="text-center p-3" style="height: 100%">
                                    <div class="mb-3" style="width: 100%; height: 250px; background: url(@item.Image); background-size: cover; background-position: 50%">
                                    </div>
                                    <div>
                                        <div style="font-size: 10pt">
                                            @item.Name
                                        </div>
                                        @if (item.PromotionPrice > 0)
                                        {
                                            <div class="fw-bold">
                                                @item.PromotionPrice.ToString("N0")đ
                                            </div>
                                            <div style="font-size: 8pt" class="text-decoration-line-through">
                                                @item.Price.ToString("N0")đ
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="fw-bold">
                                                @item.Price.ToString("N0")đ
                                            </div>
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
                if (Model.PageCount > 1)
                {
                    <div class="mt-4 mb-2 text-center">Trang @Model.PageNumber / @Model.PageCount</div>

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @keyword = @ViewBag.Keyword }), new PagedListRenderOptions
                    {
                       MaximumPageNumbersToDisplay = 5,
                       ContainerDivClasses = new string[] { "pagination-container d-flex justify-content-center" },
                       UlElementClasses = new string[] { "pagination mb-0" },
                       DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                       DisplayLinkToNextPage = PagedListDisplayMode.Always,
                       LinkToPreviousPageFormat = "Trước",
                       LinkToNextPageFormat = "Sau",
                       LinkToFirstPageFormat = "Đầu",
                       LinkToLastPageFormat = "Cuối"
                    })
                }
            }
            else
            {
                <div class="alert alert-danger mb-0">Không có sản phẩm!</div>
            }
        </div>
    </div>
</div>
