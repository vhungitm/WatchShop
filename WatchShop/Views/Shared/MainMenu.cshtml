@model List<Model.EF.Menu>
@{
    var session = (WatchShop.Common.UserLogin)Session[WatchShop.Common.CommonConstants.USER_SESSION];
    var listProductCategory = (List<Model.EF.ProductCategory>)ViewBag.listProductCategory;
}
<div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
    <ul class="navbar-nav">
        @foreach (var item in Model)
        {
            <li class="nav-item">
                <a class="nav-link" href="@item.Link">@item.Text</a>
            </li>
        }

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="productCate"
               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Danh mục sản phẩm
            </a>
            <div class="dropdown-menu" aria-labelledby="productCate">
                @foreach (var item in listProductCategory)
                {
                    <a class="dropdown-item" href="/San-pham/@item.MetaTitle-@item.ID"> @item.Name </a>
                }
            </div>
        </li>

        

        @if (session == null)
        {
            <li class="nav-item">
                <a class="nav-link" href="/Dang-nhap">Đăng nhập</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Dang-ky">Đăng ký</a>
            </li>
        }
        else { 
            <li class="nav-item">
                <a class="nav-link" href="#">Xin chào: @session.Name!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/User/Logout">Đăng xuất</a>
            </li>
        }
    </ul>
</div>