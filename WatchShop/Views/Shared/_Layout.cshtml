<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>WatchShop - @ViewBag.Title</title>

    <!-- Icon -->
    <link rel="icon" href="~/Images/watch-icon.png" type="image/gif" />

    <!-- css -->
    <link rel="stylesheet" type="text/css" href="~/CSS/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/style.css">
    <link rel="stylesheet" type="text/css" href="~/Fontawesome/css/all.min.css">

    <!-- Script -->
    <script src="~/JS/jquery.js"></script>
</head>

<body class="bg-white">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand text-primary fw-bold" href="/">WATCHSHOP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                @Html.Action("MainMenu", "Home")
            </div>
        </div>
    </nav>

    <!-- Body -->
    <div class="bg-light" style="padding-top: 59px">
        @RenderBody()
    </div>

    <!-- Footer-->
    @{Html.RenderAction("Footer", "Home");}
    @RenderSection("jsFooter", required: false)

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">Đăng xuất tài khoản này khỏi hệ thống?</div>
                <div class="modal-footer p-2">
                    <button class="btn btn-icon-split btn-secondary btn-sm" type="button" data-bs-dismiss="modal">
                        <span class="icon text-white-50">
                            <i class="fas fa-times fa-fw"></i>
                        </span>
                        <span class="text">
                            Hủy
                        </span>
                    </button>
                    <a class="btn btn-icon-split btn-danger btn-sm" href="/User/Logout">
                        <span class="icon text-white-50">
                            <i class="fas fa-sign-out fa-fw"></i>
                        </span>
                        <span class="text">
                            Đăng xuất
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Script -->
    <script src="~/JS/Admin/alert.js"></script>
</body>
</html>